<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss,SSS} %-5p [%-25.25t] %-30.30c{2} - %m%n"/>
		</Console>
	</Appenders>

	<Loggers>

		<logger name="org.ringingmaster" level="info"/>

		<Root level="info">
			<AppenderRef ref="CONSOLE"/>
		</Root>
	</Loggers>

</Configuration>